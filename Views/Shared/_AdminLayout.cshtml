
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Sidebar 01</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Sidebar-01/css/style.css">
</head>
<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="p-4 pt-5">
                <a href="#" class="img logo rounded-circle mb-5" style="background-image: url(/Content/Sidebar-01/images/logo.jpg);"></a>
                <ul class="list-unstyled components mb-5">
                    <li>
                        <a href="/Skill/Index">Yetenekler</a>
                    </li>
                    <li>
                        <a href="/Technology/Index">Teknolojiler</a>
                    </li>
                    <li>
                        <a href="/Project/Index">Projeler</a>
                    </li>
                    <li>
                        <a href="/Profile/Index">Profilim</a>
                    </li>
                    <li>
                        <a href="/Service/Index">Hizmetler</a>
                    </li>
                    <li>
                        <a href="/Contact/Index">Mesajlar</a>
                    </li>
                    <li>
                        <a href="/Statistic/Index">İstatiskler</a>
                    </li>
                </ul>
                <div class="footer">
                    <p>
                        Resume Admin Panel - @DateTime.Now.ToShortDateString()
                    </p>
                </div>
            </div>
        </nav>
        <div id="content" class="p-4 p-md-5">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="/Default/Index/">Ana sayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/About/Index/">Hakkımda</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/MyProject/Index/">Hizmetlerim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Contact/SendMessage/">İletişim</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>
    <script src="~/Content/Sidebar-01/js/jquery.min.js"></script>
    <script src="~/Content/Sidebar-01/js/popper.js"></script>
    <script src="~/Content/Sidebar-01/js/bootstrap.min.js"></script>
    <script src="~/Content/Sidebar-01/js/main.js"></script>
</body>
</html>
