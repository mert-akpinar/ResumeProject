@model List<ResumeProject.Models.tblService>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Yetenek Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Açıklaması</th>
        <th>Hizmet Açıklaması</th>
        <th>Hizmet İkonu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.ServiceTitle</td>
            <td>@item.ServiceDescription</td>
            <td>@item.ServiceDescription</td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Service/AddService" class="btn btn-primary">Yeni Hizmet Girişi</a>

